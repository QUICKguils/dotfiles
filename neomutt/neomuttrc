# Repository: https://github.com/QUICKguils/dotfiles

# IMAP settings
set realname  = "Guilain Ernotte"
set from      = guilainsjc@gmail.com
set imap_user = guilainsjc@gmail.com
set folder    = imaps://imap.gmail.com:993

# SMTP settings
set smtp_url = smtps://guilainsjc@gmail.com@smtp.gmail.com:587

# Mailboxes
set spoolfile = +INBOX

# Mail Editor
set editor = nvim

# Display Sidebar
set sidebar_visible = yes
set sidebar_width = 20

# If hcache is a folder, Mutt will create sub cache folders for each account
# which may speeds things up even more.
set header_cache = ~/.cache/mutt

# Store messages locally to speed things up, like searching message bodies.
set message_cachedir = ~/.cache/mutt

# Sidebar navigation
bind index,pager \CP sidebar-prev                 # Ctrl-n Next Folder
bind index,pager \CN sidebar-next                 # Ctrl-p Previous Folder
bind index,pager \CI sidebar-open                 # Ctrl-i Open Folder
bind index,pager \CB sidebar-toggle-visible       # Ctrl-b Toggle Sidebar
