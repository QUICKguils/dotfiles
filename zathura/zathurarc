# ===== Configuration générale =====

# Police de zathura
set font "Hack 10"

# Disposition par défaut
set window-height 1080
set window-width  1000
set adjust-open   "width"
set page-padding  2

# Mode double page
set pages-per-row 1
set first-page-column "1:1"

# Éléments indicatifs
set guioptions ""
set statusbar-v-padding 4
set statusbar-home-tilde    "true"
set window-title-home-tilde "true"
set window-title-page       "true"

# Zoom
set zoom-max  2000
set zoom-min  10
set zoom-step 5
set zoom-center     "true"
set vertical-center "true"

# Clipboard
set selection-clipboard "clipboard"

# Synctex backward search
set synctex-editor-command 'nvr --remote +"%line" "%file"'
# ===== Couleurs =====

# Transparence du surlignage des termes recherchés
set highlight-transparency 0.5

# Options utiles de recoloration
set recolor-keephue       "true"
set recolor-reverse-video "false"

