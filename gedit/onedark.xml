<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="onedark" _name="OneDark" version="1.0">

<author>Guilain Ernotte</author>
<_description>Dark color scheme using the OneDark color palette</_description>

<!-- Onedark Palette -->

<color name="black"   value ="#282c34"/>
<color name="white"   value ="#abb2bf"/>

<color name="cursor"  value ="#2c323c"/>
<color name="visual"  value ="#3e4452"/>
<color name="comment" value ="#5c6370"/>
<color name="gutter"  value ="#4b5263"/>

<color name="red"     value ="#e06c75"/>
<color name="green"   value ="#98c379"/>
<color name="yellow"  value ="#e5c07b"/>
<color name="blue"    value ="#61afef"/>
<color name="purple"  value ="#c678dd"/>
<color name="cyan"    value ="#56b6c2"/>
<color name="orange"  value ="#d19a66"/>

<!-- Global Settings -->
<style name="text"               foreground="white"  background="black"/>
<style name="selection"          foreground="white"  background="visual"/>
<style name="cursor"             foreground="white"/>
<style name="secondary-cursor"   foreground="white"/>
<style name="current-line"       background="cursor"/>
<style name="line-numbers"       foreground="gutter" background="black"/>
<style name="draw-spaces"        foreground="white"/>
<style name="background-pattern" background="black"/>

<!-- Bracket Matching -->
<style name="bracket-match"    foreground="blue" underline="single"/>
<style name="bracket-mismatch" foreground="red"  underline="single"/>

<!-- Right Margin -->
<style name="right-margin" foreground="gutter" background="black"/>

<!-- Search Matching -->
<style name="search-match" foreground="black" background="yellow"/>

<!-- Code -->
<style name="def:base-n-integer"      foreground="orange"/>
<style name="def:boolean"             foreground="orange"/>
<style name="def:builtin"             foreground="blue"/>
<style name="def:character"           foreground="orange"/>
<style name="def:comment"             foreground="comment" italic="true"/>
<style name="def:complex"             foreground="orange"/>
<style name="def:decimal"             foreground="orange"/>
<style name="def:doc-comment"         foreground="comment"/>
<style name="def:doc-comment-element" italic="true"/>
<style name="def:error"               foreground="black" background="red" bold="true"/>
<style name="def:floating-point"      foreground="orange"/>
<style name="def:function"            foreground="blue"/>
<style name="def:identifier"          foreground="cyan"/>
<style name="def:keyword"             foreground="purple"/>
<style name="def:note"                foreground="gray"/>
<style name="def:number"              foreground="orange"/>
<style name="def:operator"            foreground="orange"/>
<style name="def:preprocessor"        foreground="blue"/>
<style name="def:reserved"            foreground="blue"/>
<style name="def:shebang"             foreground="comment"/>
<style name="def:special-char"        foreground="orange"/>
<style name="def:special-constant"    foreground="orange"/>
<style name="def:statement"           foreground="purple"/>
<style name="def:string"              foreground="green"/>
<style name="def:type"                foreground="yellow"/>
<style name="def:underlined"          italic="true" underline="single"/>
<style name="def:warning"             foreground="black" background="bright_red"/>

</style-scheme>
